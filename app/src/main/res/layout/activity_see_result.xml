<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SeeResultActivity">

    <!--toolbar-->
    <RelativeLayout
        android:id="@+id/RlRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Results"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <EditText
        android:id="@+id/titleTv"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/RlRl"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_rect05"
        android:gravity="center"
        android:hint="Category"
        android:textSize="25sp" />

    <Button
        android:id="@+id/seeBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/titleTv"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="See Result"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/titleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seeBtn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Category:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/itemCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Item Count:"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemCount"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Date:"
        android:textSize="25sp" />

    <Button
        android:id="@+id/seeGraphicalPresentation"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/date"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:text="See Graphical Presentation"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>



</RelativeLayout>